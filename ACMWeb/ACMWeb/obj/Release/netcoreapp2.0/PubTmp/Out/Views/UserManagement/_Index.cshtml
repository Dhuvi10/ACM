@model List<ACM.Core.Models.UserViewModel.UserViewModel>
@{var Status = "";}
@{var ButtonText = "";}
@{var color = "";}
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Suspend</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Status = item.suspened == true ? "Active" : "Suspened";
            ButtonText = item.suspened == true ? "Suspened" : "Active";
            color = item.suspened == true ? "green" : "red";
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td style="color:@color;"><strong>@Status</strong></td>
                <td><button onclick="PasswordPopup('@item.id','@Status')" style="width:100px"  data-toggle="modal" data-target="#myModal">@ButtonText</button></td>
                <td><a onclick="EditAdminUser('@item.id');">Edit</a></td>
            </tr>

        }
    </tbody>
</table>
<input id="userID" type="hidden" />
<input id="status" type="hidden" />
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                @*<h4 class="modal-title">Modal Heading</h4>*@
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Are you sure you want to @ButtonText this user?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button onclick="PasswordView();" style="width:100px" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="cancel()">Cancel</button>
            </div>

        </div>
    </div>
</div>

