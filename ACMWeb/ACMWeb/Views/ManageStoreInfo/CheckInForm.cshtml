@model ACM.Core.Models.CheckInContractViewModels.CheckInContractsViewModel
@{
    ViewData["Title"] = "CheckInForm";
    Layout = "_LoggedInLayout";
}
<div class="row">
    <div class="col-xs-12">

        <div class="x_panel">

            <div class="x_title">
                <div class="signin-up-area">
                    <div class="form-cont">
                        <div class="form">
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <input asp-for="Id" type="hidden" class="form-control" />
                                <h1 class="h3 mb-5 font-weight-bold"><span> @ViewData["Title"]</span></h1>
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EmailAddress"></label>
                                    <input asp-for="EmailAddress" class="form-control" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Year"></label>
                                    <input asp-for="Year" class="form-control" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Make"></label>
                                    <input asp-for="Make" class="form-control" />
                                    <span asp-validation-for="Make" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Models"></label>
                                    <input asp-for="Models" class="form-control" />
                                    <span asp-validation-for="Models" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="OdoMeter"></label>
                                    <input asp-for="OdoMeter" class="form-control" />
                                    <span asp-validation-for="OdoMeter" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SummeryOfTaskCompleted"></label>
                                    <input asp-for="SummeryOfTaskCompleted" class="form-control" />
                                    <span asp-validation-for="SummeryOfTaskCompleted" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PartsNeeded"></label>
                                    <input asp-for="PartsNeeded" class="form-control" />
                                    <span asp-validation-for="PartsNeeded" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CustomerPartSupplied"></label>
                                    <input asp-for="CustomerPartSupplied" class="form-control" />
                                    <span asp-validation-for="CustomerPartSupplied" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PersonalItemInVehicle"></label>
                                    <input asp-for="PersonalItemInVehicle" class="form-control" />
                                    <span asp-validation-for="PersonalItemInVehicle" class="text-danger"></span>
                                </div>

                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-default">Register</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-default" onclick="SavePopUp()">Save</button>

                                }
                                <a href="@Url.Action("Index","UserManagement")" class="btn btn-default">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                @section Scripts {
                    @await Html.PartialAsync("_ValidationScriptsPartial")
                }
