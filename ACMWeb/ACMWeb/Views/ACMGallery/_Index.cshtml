@model List<ACM.Core.Models.GalleryViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Gallery</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                @*<td> <img src="~/Gallery/@item.Image" /></td>*@
                <td> <img class="myImg" src="~/Thumbnail/@item.ThumbnailImage" onclick='DisplayImageInPopup("/Gallery/@item.Image")' /></td>

            </tr>

        }
    </tbody>
</table>

<div class="modalPop" id="myModal" style="display:none;">
    <div class="modalPop-dialog">
        <div class="modalPop-content">

            <!-- Modal Header -->
            <div class="modalPop-header">

                <button type="button" class="close" data-dismiss="modalPop">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modalPop-body">
                Are you sure you want to  this user?
            </div>

            <!-- Modal footer -->
            <div class="modalPop-footer">
                <button onclick="PasswordView();" style="width:100px" data-dismiss="modalPop">Yes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modalPop" onclick="cancel()">Cancel</button>
            </div>

        </div>
    </div>
</div>
<!-- The Modal -->
<div id="myPopUpModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>

